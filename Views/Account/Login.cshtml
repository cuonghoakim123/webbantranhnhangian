@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Đăng nhập</h1>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                        <span class="block sm:inline">@ViewBag.ErrorMessage</span>
                    </div>
                }

                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="mb-4">
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                        <input type="email" id="email" name="email" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-indigo-500" placeholder="Nhập địa chỉ email" required />
                    </div>

                    <div class="mb-6">
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu <span class="text-red-500">*</span></label>
                        <input type="password" id="password" name="password" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-indigo-500" placeholder="Nhập mật khẩu" required />
                    </div>

                    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 mb-4">
                        Đăng nhập
                    </button>

                    <div class="text-center">
                        <p class="text-gray-600">
                            Chưa có tài khoản? 
                            <a href="@Url.Action("Register", "Account")" class="text-indigo-600 hover:text-indigo-800 font-medium">Đăng ký ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 