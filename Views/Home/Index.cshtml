@model IEnumerable<WebBanTranhDanGian.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section with Carousel -->
<div class="relative">
    <div class="swiper-container" id="hero-slider">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="h-[500px] bg-cover bg-center" style="background-image: url('/images/hero-banner.svg')">
                    <div class="h-full w-full bg-black bg-opacity-40 flex items-center">
                        <div class="container mx-auto px-4">
                            <div class="max-w-xl">
                                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 animate__animated animate__fadeInUp">Tranh Dân Gian Việt Nam</h1>
                                <p class="text-lg text-white mb-8 animate__animated animate__fadeInUp animate__delay-1s">Khám phá vẻ đẹp nghệ thuật truyền thống với bộ sưu tập độc đáo từ các làng nghề nổi tiếng.</p>
                                <a href="@Url.Action("Index", "Product")" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-8 rounded-lg transition duration-300 animate__animated animate__fadeInUp animate__delay-2s">Khám phá ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <div class="h-[500px] bg-cover bg-center" style="background-image: url('/images/about-folk-art.svg')">
                    <div class="h-full w-full bg-black bg-opacity-40 flex items-center">
                        <div class="container mx-auto px-4">
                            <div class="max-w-xl ml-auto">
                                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 animate__animated animate__fadeInUp">Nghệ Thuật Dân Gian</h1>
                                <p class="text-lg text-white mb-8 animate__animated animate__fadeInUp animate__delay-1s">Giữ gìn và phát huy những giá trị văn hóa truyền thống quý báu của dân tộc Việt Nam.</p>
                                <a href="@Url.Action("About", "Home")" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-8 rounded-lg transition duration-300 animate__animated animate__fadeInUp animate__delay-2s">Tìm hiểu thêm</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev text-white"></div>
        <div class="swiper-button-next text-white"></div>
    </div>
</div>

<!-- Featured Categories with Visual Treatment -->
<div class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Dòng Tranh Dân Gian</h2>
            <div class="w-24 h-1 bg-indigo-600 mx-auto"></div>
            <p class="mt-4 text-gray-600 max-w-2xl mx-auto">Khám phá các dòng tranh dân gian nổi tiếng của Việt Nam với lịch sử hàng trăm năm và giá trị văn hóa đặc sắc</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            @foreach (var category in ViewBag.Categories)
            {
                <div class="group">
                    <a href="@Url.Action("Index", "Product", new { categoryId = category.CategoryId })" class="block">
                        <div class="relative overflow-hidden rounded-lg shadow-lg">
                            <img src="@category.ImageUrl" alt="@category.Name" 
                                 class="w-full h-64 object-cover transform group-hover:scale-110 transition duration-500" 
                                 onerror="this.src='/images/no-image.svg'" />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
                                <div class="p-6">
                                    <h3 class="text-xl font-bold text-white mb-1">@category.Name</h3>
                                    <p class="text-gray-200 text-sm line-clamp-2">@category.Description</p>
                                    <span class="inline-block mt-4 text-indigo-300 group-hover:text-white transition-colors duration-300">
                                        Khám phá
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                        </svg>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Featured Products with Improved Card Design -->
<div class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Sản Phẩm Nổi Bật</h2>
            <div class="w-24 h-1 bg-indigo-600 mx-auto"></div>
            <p class="mt-4 text-gray-600 max-w-2xl mx-auto">Những tác phẩm tranh dân gian tiêu biểu với nét vẽ độc đáo và ý nghĩa văn hóa sâu sắc</p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            @foreach (var product in Model)
            {
                <div class="group bg-white rounded-xl shadow-sm hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="block">
                        <div class="relative">
                            <img src="@product.ImageUrl" alt="@product.Name" 
                                 class="w-full h-56 object-cover transform group-hover:scale-105 transition duration-500" 
                                 onerror="this.src='/images/no-image.svg'" />
                            <span class="absolute top-3 right-3 bg-indigo-600 text-white text-xs font-bold px-2 py-1 rounded">@product.Category.Name</span>
                        </div>
                        <div class="p-5">
                            <h3 class="text-lg font-semibold text-gray-800 group-hover:text-indigo-600 transition duration-300 mb-2 line-clamp-1">@product.Name</h3>
                            <p class="text-gray-500 text-sm line-clamp-2 mb-4">@(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                            <div class="flex justify-between items-center">
                                <span class="text-indigo-600 font-bold">@string.Format("{0:N0} ₫", product.Price)</span>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="bg-indigo-100 hover:bg-indigo-600 text-indigo-600 hover:text-white font-medium rounded-lg p-2 transition duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        
        <div class="text-center mt-12">
            <a href="@Url.Action("Index", "Product")" class="inline-block bg-transparent border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-600 hover:text-white font-semibold py-3 px-8 rounded-lg transition duration-300">
                Xem tất cả sản phẩm
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
        </div>
    </div>
</div>

<!-- About Vietnamese Folk Art with Parallax -->
<div class="py-16 relative bg-fixed bg-cover bg-center" style="background-image: url('/images/about-bg.svg')">
    <div class="absolute inset-0 bg-indigo-900 opacity-90"></div>
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center text-white">
            <h2 class="text-3xl font-bold mb-6">Nghệ Thuật Tranh Dân Gian</h2>
            <p class="text-lg mb-8">Tranh dân gian Việt Nam không chỉ là tác phẩm nghệ thuật mà còn là di sản văn hóa quý báu, phản ánh đời sống, tín ngưỡng và ước mơ của người Việt qua nhiều thế kỷ.</p>
            <a href="@Url.Action("About", "Home")" class="inline-block bg-white text-indigo-600 font-semibold py-3 px-8 rounded-lg hover:bg-opacity-90 transition duration-300">
                Tìm hiểu thêm
            </a>
        </div>
    </div>
</div>

<!-- Artist Feature Section -->
<div class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-center gap-12">
            <div class="lg:w-1/2">
                <img src="~/images/artist-feature.svg" alt="Nghệ nhân vẽ tranh dân gian" class="rounded-xl shadow-xl" />
            </div>
            <div class="lg:w-1/2">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">Nghệ Nhân Làng Nghề</h2>
                <p class="text-gray-600 mb-4">Mỗi tác phẩm tranh dân gian là kết tinh của sự khéo léo, tâm huyết và kinh nghiệm được truyền lại qua nhiều thế hệ của các nghệ nhân làng nghề.</p>
                <p class="text-gray-600 mb-6">Chúng tôi hợp tác trực tiếp với các nghệ nhân để mang đến những sản phẩm chất lượng cao, đồng thời góp phần bảo tồn và phát triển các giá trị văn hóa truyền thống.</p>
                <div class="grid grid-cols-3 gap-4 mb-8">
                    <div class="text-center">
                        <div class="text-indigo-600 font-bold text-3xl">30+</div>
                        <div class="text-gray-500">Nghệ nhân</div>
                    </div>
                    <div class="text-center">
                        <div class="text-indigo-600 font-bold text-3xl">4</div>
                        <div class="text-gray-500">Làng nghề</div>
                    </div>
<div class="text-center">
                        <div class="text-indigo-600 font-bold text-3xl">100+</div>
                        <div class="text-gray-500">Sản phẩm</div>
                    </div>
                </div>
                <a href="@Url.Action("Contact", "Home")" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
                    Liên hệ với chúng tôi
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new Swiper('#hero-slider', {
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
            });
        });
    </script>
}
